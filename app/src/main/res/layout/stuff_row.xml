<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/background_gray"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@color/background_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_row_photo"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="0.4"
            android:scaleType="centerCrop"
            android:src="@drawable/member_placeholder"/>

        <LinearLayout
            android:id="@+id/news_row_layout"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/news_row_date"
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_height="12dp"
                    android:tag="text_regular_font"
                    android:text="11.03.2015"
                    android:textColor="@android:color/background_dark"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- News Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="9.5dp">

                <TextView
                    android:id="@+id/news_row_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:tag="text_light_font"
                    android:text="news title"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <!-- News Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="9.5dp">
                <TextView
                    android:id="@+id/news_row_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="3"
                    android:tag="text_light_font"
                    android:text="news title"
                    android:textColor="@color/sol_menu_yazilar"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>